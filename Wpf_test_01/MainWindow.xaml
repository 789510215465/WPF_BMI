                <TextBlock FontSize="24" Height="30" Margin="5" > 體重 :</TextBlock>
                <TextBox Width="350" Height="30" Margin="5" x:Name="weightBox"></TextBox>
                <Button FontSize="24" Margin="5" Padding="1"x:Name="weightClaerBtn">清除</Button>
        </StackPanel>
        
        <Button FontSize="24" Width="100" Height="50">
            計算
        </Button>
            <TextBlock x:Name="answer" TextAlignment="center" FontSize="64">
                    0
            </TextBlock>
        
    </StackPanel>
</Window>
